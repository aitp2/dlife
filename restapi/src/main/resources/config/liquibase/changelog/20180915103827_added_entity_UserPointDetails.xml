            <column name="create_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="create_time" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="last_modify_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="last_modify_time" type="datetime">
